      <button type="button" class="start btn btn-primary">Start</button>
      <button type="button" class="stop btn btn-warning">Stop</button>
      <button type="button" class="clear btn btn-warning">Clear</button>
      <button type="button" class="randomize btn btn-warning">Randomize</button>
      <input id="ex4" type="text" data-slider-min="1" data-slider-max="20" data-slider-step="1" data-slider-value="5" data-slider-orientation="vertical"/>
      <p>Speed</p>
      <h4>Add a spaceship</h4>
      <div class="radio">
        <label><input type="radio" name="optradio"> Glider</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="optradio"> Future Spaceship</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="optradio"> Future Spaceship</label>
      </div>
    </div>
  </div>
</div>  
